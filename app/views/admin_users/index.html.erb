<!--**********************************
Content body start
***********************************-->
<div class="content-body">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12 col-sm-12">
        <div class="card">
          <div class="card-body">
            <p id="notice" class="text-success"><%= notice %></p>
            <h1>Admin Users</h1>
            <div class="active-member"> 
              <div class="table-responsive">  
                <table class="table table-xs mb-0 table-bordered verticle-middle"> 
                  <thead> 
                    <tr>  
                      <th>User</th>  
                      <th>Name</th>  
                      <th>Status</th> 
                      <th>Subscription</th> 
                      <th>Activity</th>
                      <th></th>
                      <th></th>
                    </tr> 
                  </thead>  
                  <tbody> 
                      <% @admin_users.each do |user| %> 
                      <tr>  
                        <td><img src="./images/avatar/1.jpg" class=" rounded-circle mr-3" alt=""><%= user.email %></td> 
                        <td><%= user.name %></td>
                        <td>  
                          <div> 
                            <div class="progress" style="height: 6px">
                            <%if user.is_active %>
                              <div class="progress-bar bg-success" title="Active" style="width: 100%"></div>
                            <% else %>  
                              <div class="progress-bar bg-danger" title="Inactive" style="width: 100%"></div>
                            <% end %>
                            </div>  
                          </div>  
                        </td> 
                        <td><i class="fa fa-circle-o text-danger mr-2"></i> Free</td>
                        <td>  
                          <span>Last Login</span> 
                          <span class="m-0 pl-3"><%= user.last_sign_in_at.to_formatted_s(:long) rescue "NA" %></span>  
                        </td>
                        <td>
                          <span>
                            <%= link_to edit_admin_user_path(user), title: 'Edit' do%>
                              <i class="fa fa-pencil color-muted m-r-5 text-primary"></i>
                            <% end %>
                          </span>
                        </td>
                        <td>
                        <% if user.is_active %>
                          <%= link_to admin_user_path(user), title: "Deactivate",  method: :delete, data: { confirm: 'Deactivate this user?' } do%>
                          <i class="fa fa-toggle-on text-success"></i>
                          <% end %>
                        <% else %>
                       <%= link_to  admin_user_path(user), title: "Activate",  method: :delete, data: { confirm: 'Activate this user?' } do%>
                        <i class="fa fa-toggle-off text-danger"></i>
                       <%end%>
                        <% end %>
                        </td>
                      </tr> 
                    <% end %> 
                  </tbody>  
                </table>  
            <br>

            <%= link_to 'New Admin User', new_admin_user_path, method: "get", class: 'btn mb-1 btn-flat btn-primary' %>

              </div>  
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
<!-- #/ container -->
</div>
<!--**********************************
Content body end
***********************************-->