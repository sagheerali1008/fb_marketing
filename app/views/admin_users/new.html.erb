<!--**********************************
Content body start
***********************************-->
<div class="content-body">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12 col-sm-12">
        <div class="card">
            <div class="card-body">
            <h4 class="card-title">New Users</h4>
              <div class="basic-form">
              <%= form_for(@admin_user, url: admin_users_path, html: { method: :POST }) do |form| %>
              <% if @admin_user.errors.any? %>
              <div id="error_explanation" class="text-danger">
                <ul>
                  <% @admin_user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
              <% end %>
              <div class="form-group">
                <%= form.label :email %>
                <%= form.email_field :email , class: 'form-control input-default', placeholder: 'Email', autocomplete: "off" %>
              </div>
              <div class="form-group">
                <%= form.label :password %>
                <%= form.password_field :password, class: 'form-control input-default', placeholder: 'Password', autocomplete: "off" %>
              </div>
              <div class="form-group">
                <%= form.label :role %>
                <%= select_tag "role", options_for_select([ "User", "Admin" ], "User"), {:class => 'form-control input-default'} %>
              </div>
              <div class="form-group">
                <%= form.label :name %>
                <%= form.text_field :name, class: 'form-control input-default', placeholder: 'Name', autocomplete: "off" %>
              </div>
              <div class="actions">
                <%= form.submit :class => 'btn mb-1 btn-flat btn-primary'%>
              </div>
              <% end %>
            </div>
        </div>
      </div>
    </div>
  </div>
<!-- #/ container -->
</div>
<!--**********************************
Content body end
***********************************-->
