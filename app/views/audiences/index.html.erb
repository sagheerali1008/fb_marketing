<!--**********************************
Content body start
***********************************-->
<div class="content-body">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12 col-sm-12">
        <div class="card">
            <div class="card-body">
             <p id="notice"><%= notice %></p>

              <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#createNewAudience">Create New Audiences</button>

            	  <h2>Audiences</h2>
            	  <table class="table table-hover">
            	    <thead>
            	      <tr>
                      <th>Audience Name </th>          
                      <th>Category</th>          
                      <th>SubCategory</th>          
            	        <th>Audience ID</th>
                      <th></th>
            	      </tr>
            	    </thead>
            	    <tbody>
            	      <% @audiences.each do |audience| %>
            	        <tr>
                        <td><strong><%= audience.name rescue "" %></strong></td>
                        <td><%= audience.sub_category.category.name rescue "" %></td>
                        <td><%= audience.sub_category.name rescue "" %></td>
                        <td><%= audience.customaudience_id rescue "" %></td>
                        <td><%= link_to 'Destroy', audience_path(audience.id),
                                method: :delete,
                                data: { confirm: 'Are you sure?' } %></td>
            	        </tr>
            	      <% end %>
            	    </tbody>
            	  </table>

              <!-- Modal -->
              <div class="modal fade" id="createNewAudience" role="dialog">
              <!-- Create a Custom Audience -->
                <div class="modal-dialog" style="max-width: 1000px;">
                  <!-- Modal content-->
                  <div class="modal-content" style="width:100%;">
                    <div class="modal-header">
                      <h4 class="modal-title">Create a Custom Audience</h4>
                      <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                     <%= render 'form' %>
                    </div>
                  </div>
                </div>
              </div>
              
            </div>
        </div>
      </div>
    </div>
  </div>
<!-- #/ container -->
</div>
<!--**********************************
Content body end
***********************************-->
