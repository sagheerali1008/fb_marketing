.animated-btn {
  color: #FFFFFF;
  text-align: center;
  transition: all 0.5s;
  cursor: pointer;

}
.animated-btn:hover{
  transform:none !important;
}
.animated-btn span {
  cursor: pointer;
  display: inline-block;
  position: relative;
  transition: 0.5s;
}

.animated-btn span:after {
  content: '\00bb';
  position: absolute;
  opacity: 0;
  top: 0;
  right: -20px;
  transition: 0.5s;
}

.animated-btn:hover span {
  padding-right: 25px;
}

.animated-btn:hover span:after {
  opacity: 1;
  right: 0;
}
