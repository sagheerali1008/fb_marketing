<div class="content-body">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card">
          <div class="upgradeheader">Upgrade</div>
          <div class="card-body">
            <div class="col-md-9 upgrade-bg-block">
              <div class="col-md-11 pl-0 pt-3">
                <div class="tab">
                  <button class="subscription_type tablinks active" type="button" onclick="openCity(event, 'London')">Monthly Plan</button>
                  <button class="subscription_type tablinks" type="button" onclick="openCity(event, 'Paris')">Annual Plan</button>
                  <button class="subscription_type tablinks" type="button" onclick="openCity(event, 'Tokyo')">Quarterly Plan</button>
                </div>
              </div>
              <div id="London" class="tabcontent" style="display:block">
                <%= form_for :subscription, url: subscriptions_path, method: "post", local: true do |form| %>
                  <div class="col-md-12">
                    <div class="row">
                      <div class="col-md-6">
                        <div class="estimated-text">Estimated Monthly Plan</div>
                        <div id="output" class="colss-fb-output text-center"></div>
                        <div>
                          <% @subscription %>
                          <%= form.range_field :my_score1,:step=>1, :min=>1, :max=>18,value: '1',:id=>"input",class: "slider" %>
                          <%= form.hidden_field :my_score, id: "my_score" %> 
                          <%= form.hidden_field :subscription_type, value: "Monthly Plan" %> 
                        </div>
                        <div>
                          <h5 class="monthly-text">Your Monthly Ad Spend: US$ 0</h5>
                        </div>
                        <div class="upto-text">
                          <span class="mr-3"><svg xmlns="http://www.w3.org/2000/svg" width="12" height="10" viewBox="0 0 12 10"><g><g><path fill="#006df0" d="M1.138 5.052L0 6.19l3.724 3.724L12 1.638 10.862.5 3.724 7.638z"></path></g></g></svg></span>Up to US$ 2,500
                        </div>

                        <div class="upto-text">
                         <span class="mr-3"><svg xmlns="http://www.w3.org/2000/svg" width="12" height="10" viewBox="0 0 12 10"><g><g><path fill="#006df0" d="M1.138 5.052L0 6.19l3.724 3.724L12 1.638 10.862.5 3.724 7.638z"></path></g></g></svg></span>Package includes 1 ad accounts
                        </div>
                        <div class="upto-text">
                          <span class="mr-3"><svg xmlns="http://www.w3.org/2000/svg" width="12" height="10" viewBox="0 0 12 10"><g><g><path fill="#006df0" d="M1.138 5.052L0 6.19l3.724 3.724L12 1.638 10.862.5 3.724 7.638z"></path></g></g></svg></span>
                         Extra ad accounts beyond the package
                        </div>
                      <!--   <div class="col-md-7 mx-auto">
                          <div class="add-acc-btn text-center">Add Ad Accounts</div>
                        </div>
                        <div class="col-md-11 mx-auto">
                          <div class="text-center activated-acc-text">(1 activated accounts)</div>
                        </div> -->
                        <div>
                          <div class="fairpolicy">Upgrade policy<br>If you go above the package limits you will automatically be upgraded to the next package tier.<br>Every extra ad account beyond the package limit will be charged at $49/mo.</div>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="brainio-upgrade-plan-box">
                          <div class="plan-block">
                            <span>Plan: US$ <span id="output00"></span></span>
                          </div>

                          <div class="summary-text">Summary:</div>
                          <div class="summary-div">
                            Monthly Payment:US$ <span id="output000"></span>
                          </div>

                          <div class="summary-div">
                            Next Payment Due:<span><%=Date.today.next_month%></span>
                            <%=form.hidden_field :end_date, value:Date.today.next_month%>
                          </div>

                          <div class="summary-div">
                            Total:US$ <span class="summary-div-inside" id="output0000"></span>
                          </div>
                           <div id="no-content"></div>
                          
                          <div class="form-group">
                            <%#= form.submit "Upgrade", class: 'btn mb-1 btn-flat btn-primary custom-btn text-white ' %>
                          </div>
                          <div style="color: black;">
                           <!--  <%=form.check_box :agree,required:true %><span> I understand that additional charges may apply when going beyond the package limits.</span> -->
                          </div>
                          <div id="plann-name"></div>
                          <div class="col-md-10 btn-upgrade p-0">
                            <button class="btn my-1 btn-flat label gradient-1 rounded pointer col-md-12 btn-lg upgrade-btn-total" type="button" data-toggle="modal" data-target="#paymentModal-1" id="upgrade-btn" disabled = "true" >UPGRADE</button>
                          </div>
                          <div class="row pt-4">
                            <div class="col-md-12"><input type="checkbox" id="agree-checkbox">
                            <span class="summary-div ml-3">I understand that additional charges may apply when going beyond the package limits.</span></div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                <%end%>
              </div>
              <div id="Paris" class="tabcontent">
                <%=render "annual_form"%>
              </div>

              <div id="Tokyo" class="tabcontent">
                <%=render "quarterly_form"%>
              </div>
            </div>  
          </div>
        </div>
      </div>
    </div>
  </div>
<!-- #/ container -->
</div>
<!--**********************************
Content body end
***********************************-->

