<div class="limiter pt-75">
    <div class="container-login100" style="background-image: url('/assets/bg-01.jpg');">
      <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
        <%= form_for(resource, as: resource_name, class: 'login100-form validate-form',url: registration_path(resource_name)) do |f| %>
          <span class=" login100-form-title p-b-49">
            Sign up
          </span>
          <div class="flex-c-m p-b-20">
            <%= link_to user_facebook_omniauth_authorize_path, class: 'login100-social-item bg1 facebook-login-btn' do %>
            <i class="fa fa-facebook"></i><span>Sign up with facebook</span>
            <% end %>
          </div>
          <div class="txt1 text-center">
            <hr>
            <span class="or-txt">Or</span>
          </div>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="wrap-input100 validate-input m-b-23" data-validate = "Email is required">
            <span class="label-input100">Email</span>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input100' %>
            <span class="focus-input100 custom-icon"><i class="fa fa-user"></i></span>
          </div>

          <div class="wrap-input100 validate-input" data-validate="Password is required">
            <span class="label-input100">Password</span>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: 'input100'  %>
            <span class="focus-input100 custom-icon"><i class="fa fa-lock"></i></span>
          </div>

          <div class="wrap-input100 validate-input" data-validate="Password is required">
            <span class="label-input100">Password Confirmation</span>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input100' %>
            <span class="focus-input100 custom-icon"><i class="fa fa-lock"></i></span>
          </div>
          
          <div class="container-login100-form-btn p-t-54">
            <div class="wrap-login100-form-btn">
              <div class="login100-form-bgbtn"></div>
              <%= f.submit "Sign up", class: 'login100-form-btn bg-transparent pointer' %>
            </div>
          </div>

          <div class="flex-col-c p-t-54">
            <%- if controller_name != 'sessions' %>
            <span>
              Or  <%= link_to "Login", new_session_path(resource_name), class: 'txt2 underline txt-color' %>
            </span>
              
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
</div>
