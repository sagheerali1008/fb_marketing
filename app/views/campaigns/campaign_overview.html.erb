<!--**********************************
Content body start
***********************************-->
<div class="content-body">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12 col-sm-12">
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-md-4">
                <h4 class="card-title">Campaign Overview</h4>
              </div>
              <div class="col-md-4">
                <%= button_to "Create New", campaigns_path, class:"btn mb-1 btn-primary", method: :get %>
              </div>
              <div class="col-md-4 text-right" >
                <input type="text" name="daterange" value="01/01/2018 - 01/15/2018" />
              </div>
            </div>
            <p>Madgicx provides an overview of your existing adset performance and lets you instantly create new audience-based adsets.</p>
            <div class="row"></div>
              <div class="border"></div>
              <div>
                <ul class="nav nav-tabs">
                  <div class="col-md-4"><li class="active"><a data-toggle="tab" href="#acquisition">Acquisition</a></li></div>
                  <div class="col-md-4"><li><a data-toggle="tab" href="#retargeting">Retargeting</a></li></div>
                  <div class="col-md-4"><li><a data-toggle="tab" href="#retention">Retention</a></li></div>
                </ul>
              </div>
              <div class="border"></div>
            </div>               
            <div class="table-responsive">
              <div class="tab-content">
                <!-- Tab 1 -->
                <div id="acquisition" class="tab-pane fade in active">
                  <table class="table header-border">
                    <thead>
                      <tr>                        
                        <th>Adset Name</th>
                        <th>Start Time</th>
                        <th>End Time</th>
                        <th>Daily budget</th>
                        <th>Life Time Budget</th>
                        <th>Last Events</th>
                        <th>Amount Spent</th>
                        <th>ROAS(all)</th>
                        <th>Cost Per Website Purchase</th>
                        <th>CTR</th>
                        <th>Weekly Over Time performance</th>
                        <th>Enabled Tactics</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% all = @adsetss.all rescue "" %>
                      <% if all.present? %>
                        <% all.each do |adset| %>
                          <tr>
                            <td><%= adset.name %></td>
                            <td><%= adset.start_time %></td>
                            <td><%= adset.end_time %></td>
                            <td><%= adset.daily_budget %></td>
                            <td><%= adset.lifetime_budget %></td>
                          </tr>
                        <% end %>
                      <% else %>
                        <tr>
                          <td colspan="5">
                            <div class="alert alert-danger text-center">
                              <strong>You have no Retention adsets</strong>
                              <p>Create Aquisition ad sets to optimize for better ROAS</p>
                              <%= button_to "Create New Acquisition Adset", new_adset_path, class:"btn mb-1 btn-primary", method: :get %>
                            </div>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
                <div id="retargeting" class="tab-pane fade">
                  <table class="table header-border">
                    <thead>
                      <tr>                        
                        <th>Adset Name</th>
                        <th>Start Time</th>
                        <th>End Time</th>
                        <th>Daily budget</th>
                        <th>Life Time Budget</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% all = @adsetss.all rescue "" %>
                      <% if all.present? %>
                        <% all.each do |adset| %>
                          <tr>
                            <td><%= adset.name %></td>
                            <td><%= adset.start_time %></td>
                            <td><%= adset.end_time %></td>
                            <td><%= adset.daily_budget %></td>
                            <td><%= adset.lifetime_budget %></td>
                          </tr>
                        <% end %>
                      <% else %>
                        <tr>
                          <td colspan="5">
                            <div class="alert alert-danger text-center">
                              <strong>You have no Retargeting adsets</strong>
                              <p>Create retention ad sets to optimize for better ROAS</p>
                             <%= button_to "Create New Retargeting Adset", new_adset_path, class:"btn mb-1 btn-primary", method: :get %>
                            </div>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
                <div id="retention" class="tab-pane fade">
                  <table class="table header-border">
                    <thead>
                      <tr>                        
                        <th>Adset Name</th>
                        <th>Start Time</th>
                        <th>End Time</th>
                        <th>Daily budget</th>
                        <th>Life Time Budget</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% all = @adsetss.all rescue "" %>
                      <% if all.present? %>
                        <% all.each do |adset| %>
                          <tr>
                            <td><%= adset.name %></td>
                            <td><%= adset.start_time %></td>
                            <td><%= adset.end_time %></td>
                            <td><%= adset.daily_budget %></td>
                            <td><%= adset.lifetime_budget %></td>
                          </tr>
                        <% end %>
                      <% else %>
                        <tr>
                          <td colspan="5">
                            <div class="alert alert-danger text-center">
                              <strong>You have no Retention adsets</strong>
                              <p>Create retention ad sets to optimize for better ROAS</p>
                              <%= button_to "Create New Retention Adset", new_adset_path, class:"btn mb-1 btn-primary", method: :get %>
                            </div>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!--**********************************
Content body end
***********************************-->
<style>
.border{
  border: 4px solid blue;
}
</style>