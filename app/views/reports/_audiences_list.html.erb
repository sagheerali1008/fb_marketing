<%@audiences_with_category.each do |category, cat_audiences|%>
  <%@audiences = cat_audiences%>
  <%category = Category.find_by_id(category)%>
  <div class="category_block">  
    <div class="row">
      <div class="col-md-12">
        <div class="">
          <h4 class="gradient-3-text text-center"><%=category.name%></h4>
          <p class="text-center"><%=category.description%></p>
          <hr class="brainio-custom-hr">
        </div>
        <div class="text-right">
          <button type="button" class="btn mb-1 btn-outline-primary btn-xs select_all_audience">Select all in this view</button>
        </div>
      </div>
    </div>
    <ul>
      <% @audiences.each_slice(2) do |audiences| %>
        <div class="row">
          <% audiences.each do |audience| %>
            <div class="col-md-6">
              <div class="card brainio-aud-card">
                <span class="gradient-4 brainio-aud-status-bar text-right px-2">
                  <span class="aud-status-bar-txt">0 created</span>
                  <span class="aud-status-bar-txt">0 live</span>
                </span>
                <div class="card-body">
                  <div class="text-center">
                    <span class="display-5"><i class="fa fa-user-circle-o text-center gradient-3-text"></i></span>
                    <h4 class="mt-3"><%= audience.name %></h4>
                    <p><%=audience.description%></p>
                    <div class="col-md-12 text-left">
                      <a href="javascript:void(0);" class="badge badge-primary"><%=audience.sub_category.name rescue ''%></a>
                      <!-- <a href="javascript:void(0);" class="badge gradient-4"> Engagors</a> -->
                    </div>
                  </div>
                </div>
                <div class="overlay"></div>
                <%=hidden_field_tag "audience_ids[]", nil, class: 'audience_id_txt', id: "audience_ids_#{audience.id}", data: { audience_id: audience.id}%>
              </div>
              <!-- <div class="overlay"></div> -->
            </div>
          <% end %>
        </div>
      <% end %>
    </ul>
  </div>
<%end%>  


