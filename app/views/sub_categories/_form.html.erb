<div class="content-body">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12 col-sm-12">
        <div class="card">
          <div class="card-body">              

            <%= form_with(model: sub_category, local: true) do |form| %>
              <% if sub_category.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(sub_category.errors.count, "error") %> prohibited this sub_category from being saved:</h2>

                  <ul>
                  <% sub_category.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="field">
                <%= form.label :name %>
                <%= form.text_field :name %>
              </div>

              <div class="field">
                <%= form.label :description %>
                <%= form.text_field :description %>
              </div>

              <div class="field">
                <%= form.label :category_id %>
                <%= form.select( :category_id, Category.all.collect {|a| [a.name, a.id]})%>  
              </div>

              <div class="actions">
                <%= form.submit %>
              </div>
            <% end %>

   
          </div>
        </div>
      </div>
    </div>
  </div>
<!-- #/ container -->
</div>
<!--**********************************
Content body end
***********************************-->